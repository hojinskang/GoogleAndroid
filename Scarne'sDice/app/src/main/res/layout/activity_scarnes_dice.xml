<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hojinskang.scarnesdice.ScarnesDiceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your score:"
        android:id="@+id/user_score_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer score:"
        android:id="@+id/computer_score_header"
        android:layout_alignTop="@+id/user_score_header"
        android:layout_toLeftOf="@+id/computer_score"
        android:layout_toStartOf="@+id/computer_score"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dice"
        android:contentDescription="dice1.png"
        android:src="@drawable/dice1"
        android:layout_above="@+id/message"
        android:layout_toLeftOf="@+id/turner"
        android:layout_toStartOf="@+id/turner"
        android:layout_marginTop="46dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll"
        android:id="@+id/roll_button"
        android:layout_below="@+id/message"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hold"
        android:id="@+id/hold_button"
        android:layout_alignTop="@+id/roll_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset_button"
        android:layout_alignTop="@+id/hold_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/user_score"
        android:layout_alignBaseline="@+id/user_score_header"
        android:layout_alignBottom="@+id/user_score_header"
        android:layout_toRightOf="@+id/user_score_header"
        android:layout_toEndOf="@+id/user_score_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/computer_score"
        android:layout_alignTop="@+id/computer_score_header"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="turn score:"
        android:id="@+id/turn_score_header"
        android:layout_below="@+id/turner"
        android:layout_alignLeft="@+id/hold_button"
        android:layout_alignStart="@+id/hold_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/turn_score"
        android:layout_alignTop="@+id/turn_score_header"
        android:layout_alignRight="@+id/hold_button"
        android:layout_alignEnd="@+id/hold_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your"
        android:id="@+id/turner"
        android:textAlignment="center"
        android:layout_below="@+id/computer_score_header"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your turn"
        android:id="@+id/message"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dice2"
        android:contentDescription="dice1.png"
        android:src="@drawable/dice1"
        android:layout_above="@+id/message"
        android:layout_toRightOf="@+id/turner"
        android:layout_toEndOf="@+id/turner"
        android:layout_marginTop="46dp"/>

</RelativeLayout>
