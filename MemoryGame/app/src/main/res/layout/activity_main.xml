<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10px">

    <!--<ImageView-->
    <!--android:id="@+id/dice"-->
    <!--android:layout_below="@id/curr_score"-->

    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:src="@drawable/dice1" />-->

    <TableLayout
        android:layout_width="255dp"
        android:layout_height="255dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/Grid">

        <TableRow
            android:layout_width="255dp"
            android:layout_height="255dp"
            android:id="@+id/Row1"
            android:layout_marginBottom="2dp" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/block1x1"
                android:background="@android:color/black"
                android:layout_column="0"
                android:layout_marginRight="2dp"
                android:clickable="true" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/block1x2"
                android:background="@android:color/black"
                android:layout_column="1"
                android:layout_marginRight="2dp"
                android:clickable="true" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/block1x3"
                android:background="@android:color/black"
                android:layout_column="2"
                android:layout_marginRight="2dp"
                android:clickable="true" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/block1x4"
                android:background="@android:color/black"
                android:layout_column="3"
                android:clickable="true" />
        </TableRow>

        <TableRow
            android:layout_width="255dp"
            android:layout_height="255dp"
            android:id="@+id/Row2"
            android:layout_marginBottom="2dp" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/block2x1"
                android:background="@android:color/black"
                android:layout_column="0"
                android:layout_marginRight="2dp"
                android:clickable="true" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/block2x2"
                android:background="@android:color/black"
                android:layout_column="1"
                android:layout_marginRight="2dp"
                android:clickable="true" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/block2x3"
                android:background="@android:color/black"
                android:layout_column="2"
                android:layout_marginRight="2dp"
                android:clickable="true" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/block2x4"
                android:background="@android:color/black"
                android:layout_column="3"
                android:clickable="true" />
        </TableRow>

        <TableRow
            android:layout_width="255dp"
            android:layout_height="255dp"
            android:id="@+id/Row3"
            android:layout_marginBottom="2dp" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/block3x1"
                android:background="@android:color/black"
                android:layout_column="0"
                android:layout_marginRight="2dp"
                android:clickable="true" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/block3x2"
                android:background="@android:color/black"
                android:layout_column="1"
                android:layout_marginRight="2dp"
                android:clickable="true" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/block3x3"
                android:background="@android:color/black"
                android:layout_column="2"
                android:layout_marginRight="2dp"
                android:clickable="true" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/block3x4"
                android:background="@android:color/black"
                android:layout_column="3"
                android:clickable="true" />
        </TableRow>

        <TableRow
            android:layout_width="255dp"
            android:layout_height="255dp"
            android:id="@+id/Row4" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/block4x1"
                android:background="@android:color/black"
                android:layout_column="0"
                android:layout_marginRight="2dp"
                android:clickable="true" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/block4x2"
                android:background="@android:color/black"
                android:layout_column="1"
                android:layout_marginRight="2dp"
                android:clickable="true" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/block4x3"
                android:background="@android:color/black"
                android:layout_column="2"
                android:layout_marginRight="2dp"
                android:clickable="true" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/block4x4"
                android:background="@android:color/black"
                android:layout_column="3"
                android:clickable="true" />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset_button"
        android:layout_alignTop="@+id/check_button"
        android:layout_alignRight="@+id/Grid"
        android:layout_alignEnd="@+id/Grid" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/check_button"
        android:layout_below="@+id/Grid"
        android:layout_toLeftOf="@+id/reset_button"
        android:layout_toStartOf="@+id/reset_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/start_button"
        android:layout_below="@+id/Grid"
        android:layout_toLeftOf="@+id/check_button"
        android:layout_toStartOf="@+id/check_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press START to begin"
        android:id="@+id/message"
        android:layout_above="@+id/Grid"
        android:layout_alignLeft="@+id/Grid"
        android:layout_alignStart="@+id/Grid" />
</RelativeLayout>